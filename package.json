{
  "name": "helvety-pdf",
  "version": "1.8.0",
  "description": "Privacy-focused, client-side PDF toolkit for merging, reordering, rotating, and extracting pages.",
  "author": "Helvety by Rubin",
  "homepage": "https://pdf.helvety.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/CasparRubin/helvety-pdf.git"
  },
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "node scripts/generate-version.mjs && next dev -p 3004",
    "build": "node scripts/generate-version.mjs && next build",
    "start": "next start -p 3004",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "analyze": "ANALYZE=true next build",
    "postinstall": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs', 'public/pdf.worker.min.mjs')\"",
    "sync:check": "node ../helvety.com/scripts/sync-shared.js --check"
  },
  "dependencies": {
    "@fontsource-variable/public-sans": "^5.2.7",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.564.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-pdf": "^10.3.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^10",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^62.5.4",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "pdfjs-dist": "^5.4.624",
    "node-domexception": "^2.0.2"
  }
}
